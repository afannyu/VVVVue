   allCheckProducts\n    } = useCartEffect(shopId);\n    return {\n      productList,\n      shopId,\n      clearCartProducts,\n      changeCartItem,\n      changeCartItemChecked,\n      caculations,\n      cartList,\n      allCheckProducts,\n      handleCartShow,\n      cartShow\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAsFA,SAASA,GAAT,QAAoB,mBAApB;AACA,SAASC,QAAT,QAAyB,YAAzB;AACA,SAASC,QAAT,QAAyB,MAAzB;AACA,SAASC,gBAAT,QAAiC,2BAAjC;;AAEA,MAAMC,aAAY,GAAKC,MAAD,IAAU;EAC9B,MAAM;IAAEC,cAAF;IAAkBC,WAAlB;IAA+BC;EAA/B,IAA+CL,gBAAgB,CAACE,MAAD,CAArE;EACA,MAAMI,KAAI,GAAIP,QAAQ,EAAtB;EACA,MAAMQ,QAAO,GAAID,KAAK,CAACE,KAAN,CAAYD,QAA7B,CAH8B,CAI9B;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;EACA;;EAEE,MAAME,qBAAoB,GAAI,CAACP,MAAD,EAASQ,SAAT,KAAqB;IACjDJ,KAAK,CAACK,MAAN,CAAa,uBAAb,EAAsC;MACpCT,MADoC;MAC5BQ;IAD4B,CAAtC;EAGF,CAJA;;EAMA,MAAME,iBAAgB,GAAKV,MAAD,IAAU;IAClCI,KAAK,CAACK,MAAN,CAAa,mBAAb,EAAkC;MAChCT;IADgC,CAAlC;EAGF,CAJA;;EAMA,MAAMW,gBAAe,GAAKX,MAAD,IAAU;IACjCI,KAAK,CAACK,MAAN,CAAa,kBAAb,EAAgC;MAC9BT;IAD8B,CAAhC;EAGF,CAJA;;EAMA,OAAO;IACLE,WADK;IACQQ,iBADR;IAELT,cAFK;IAEWM,qBAFX;IAGLJ,WAHK;IAGQE,QAHR;IAGkBM;EAHlB,CAAP;AAKJ,CA9CA;;AA+CA,eAAe;EACbC,IAAI,EAAE,UADO;;EAEbC,KAAK,GAAG;IACN;IACA,MAAMC,KAAI,GAAIlB,QAAQ,EAAtB;IACA,MAAMI,MAAK,GAAIc,KAAK,CAACC,MAAN,CAAaC,EAA5B;IACA,MAAMC,QAAO,GAAItB,GAAG,CAAC,KAAD,CAApB;;IACA,MAAMuB,cAAa,GAAI,MAAI;MACzBD,QAAQ,CAACE,KAAT,GAAiB,CAACF,QAAQ,CAACE,KAA3B;IACF,CAFA;;IAIA,MAAM;MAAEjB,WAAF;MAAeQ,iBAAf;MACNT,cADM;MACUM,qBADV;MAENJ,WAFM;MAEOE,QAFP;MAEgBM;IAFhB,IAEsCZ,aAAa,CAACC,MAAD,CAFzD;IAIA,OAAO;MACLE,WADK;MACQF,MADR;MACgBU,iBADhB;MAELT,cAFK;MAEWM,qBAFX;MAGLJ,WAHK;MAGQE,QAHR;MAGkBM,gBAHlB;MAILO,cAJK;MAIWD;IAJX,CAAP;EAMF;;AArBa,CAAf","names":["ref","useRoute","useStore","commonCartEffect","useCartEffect","shopId","changeCartItem","productList","caculations","store","cartList","state","changeCartItemChecked","productId","commit","clearCartProducts","allCheckProducts","name","setup","route","params","id","cartShow","handleCartShow","value"],"sourceRoot":"","sources":["C:\\Carrie\\VVVVVue\\jingdong\\src\\views\\shop\\Cart.vue"],"sourcesContent":["<template>\r\n  <div\r\n  class=\"mask\"\r\n  v-show=\"cartShow\"\r\n  @click=\"handleCartShow\"\r\n  ></div>\r\n  <div class=\"cart\">\r\n    <div\r\n    class=\"product\"\r\n    v-show=\"cartShow\"\r\n    >\r\n      <div\r\n      v-show=\"(caculations.all > 0)\"\r\n      class=\"product__header\"\r\n      >\r\n        <div\r\n        class=\"product__header__alll\"\r\n        >\r\n          <span\r\n          @click=\"()=>allCheckProducts(shopId)\"\r\n          v-html=\"caculations.allCartProducts ? '&#xe601;' : '&#xe8bb;'\"\r\n          class=\"product__header__allIcon iconfont\"\r\n          ></span>\r\n          <span class=\"product__header__all\">全选</span>\r\n        </div>\r\n        <div\r\n        @click=\"()=>clearCartProducts(shopId)\"\r\n        class=\"product__header__clear\"\r\n        >清空购物车</div>\r\n      </div>\r\n      <template\r\n      v-for=\"item in productList\"\r\n      :key=\"item._id\"\r\n      >\r\n        <div\r\n        class=\"product__item\"\r\n        v-if=\"item.count > 0\"\r\n        >\r\n        <div\r\n        class=\"product__item__icon iconfont\"\r\n        v-html=\"item.check ? '&#xe601;' : '&#xe8bb;'\"\r\n        @click=\"()=>changeCartItemChecked(shopId, item._id)\"\r\n        ></div>\r\n          <img :src=\"item.imgUrl\" alt=\"\">\r\n          <div class=\"product__item__text\">\r\n            <h4>{{item.name}}</h4>\r\n            <div class=\"price\">\r\n              <span class=\"yen\">￥{{item.price}}</span>\r\n              <span class=\"origin\">￥{{item.oldPrice}}</span>\r\n            </div>\r\n            <div class=\"number\">\r\n              <div\r\n              class=\"number__minus\"\r\n              @click=\"()=>{changeCartItem(shopId, item._id, item, -1)}\"\r\n              >-</div>\r\n              <div class=\"number__num\">\r\n                {{ item.count || 0 }}\r\n              </div>\r\n              <div\r\n              class=\"number__plus\"\r\n              @click=\"()=>{changeCartItem(shopId, item._id, item, 1)}\"\r\n              >+</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </template>\r\n    </div>\r\n    <div class=\"checkk\">\r\n      <div class=\"icon\">\r\n      <img\r\n      @click=\"handleCartShow\"\r\n      src=\"http://www.dell-lee.com/imgs/vue3/basket.png\"\r\n      alt=\"\">\r\n      <div class=\"icon__tag\">{{caculations.all}}</div>\r\n      </div>\r\n      <div class=\"check\">\r\n        总计：<span>￥{{caculations.price}}</span>\r\n      </div>\r\n      <router-link :to=\"{path: `/order/${shopId}`}\">\r\n        <div class=\"car\">去结算</div>\r\n      </router-link>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ref } from '@vue/runtime-core'\r\nimport { useRoute } from 'vue-router'\r\nimport { useStore } from 'vuex'\r\nimport { commonCartEffect } from '../../effects/cartEffects'\r\n\r\nconst useCartEffect = (shopId)=>{\r\n  const { changeCartItem, productList, caculations } = commonCartEffect(shopId)\r\n  const store = useStore()\r\n  const cartList = store.state.cartList\r\n  // const caculations = computed(()=>{\r\n  //   const productList = cartList[shopId]?.productList\r\n  //   let result = { all: 0, price: 0, allCartProducts: true }\r\n  //   if(productList) {\r\n  //     for(let i in productList) {\r\n  //       const product = productList[i]\r\n  //       result.all += product.count\r\n  //       if(product.check) {\r\n  //         result.price += (product.count * product.price)\r\n  //       }\r\n  //       if(!product.check && product.count > 0){\r\n  //         result.allCartProducts = false\r\n  //       }\r\n  //     }\r\n  //   }\r\n  //   result.price = result.price.toFixed(2)\r\n  //   return result\r\n  // })\r\n\r\n    const changeCartItemChecked = (shopId, productId)=>{\r\n      store.commit('changeCartItemChecked', {\r\n        shopId, productId\r\n      })\r\n    }\r\n\r\n    const clearCartProducts = (shopId)=>{\r\n      store.commit('clearCartProducts', {\r\n        shopId\r\n      })\r\n    }\r\n\r\n    const allCheckProducts = (shopId)=>{\r\n      store.commit('allCheckProducts',{\r\n        shopId\r\n      })\r\n    }\r\n\r\n    return {\r\n      productList, clearCartProducts,\r\n      changeCartItem, changeCartItemChecked,\r\n      caculations, cartList, allCheckProducts,\r\n    }\r\n}\r\nexport default {\r\n  name: 'CartView',\r\n  setup() {\r\n    // 获取store中的数据\r\n    const route = useRoute()\r\n    const shopId = route.params.id\r\n    const cartShow = ref(false)\r\n    const handleCartShow = ()=>{\r\n      cartShow.value = !cartShow.value\r\n    }\r\n\r\n    const { productList, clearCartProducts,\r\n    changeCartItem, changeCartItemChecked,\r\n    caculations, cartList,allCheckProducts, } = useCartEffect(shopId)\r\n\r\n    return {\r\n      productList, shopId, clearCartProducts,\r\n      changeCartItem, changeCartItemChecked,\r\n      caculations, cartList, allCheckProducts,\r\n      handleCartShow, cartShow\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n@import '../../style/viriables.scss';\r\n@import '../../style/mixins.scss';\r\n\r\n.mask {\r\n  position: fixed;\r\n  left: 0;\r\n  top: 0;\r\n  bottom: 0;\r\n  right: 0;\r\n  background: rgba(0,0,0,0.50);\r\n}\r\n\r\n.cart {\r\n  position: absolute;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n}\r\n\r\n.checkk {\r\n  display: flex;\r\n  height: .49rem;\r\n  box-shadow: 0 -1px 1px 0 #F1F1F1;\r\n  background: $bgColor;\r\n  a {\r\n    color: $bgColor;\r\n    text-decoration: none;\r\n  }\r\n}\r\n\r\n.product {\r\n  flex: 1;\r\n  padding: 0 .18rem 0 .16rem;\r\n  overflow-y: scroll;\r\n  background: $bgColor;\r\n  &__header {\r\n    display: flex;\r\n    line-height: .52rem;\r\n    background: $bgColor;\r\n    border-bottom: 1px solid #F1F1F1;\r\n    &__alll {\r\n      flex: 1;\r\n      font-size: .14rem;\r\n    }\r\n    span {\r\n      display: inline-block;\r\n    }\r\n    &__allIcon {\r\n      vertical-align: top;\r\n      margin-right: .1rem;\r\n      font-size: .2rem;\r\n      color: $btn-bgColor;\r\n    }\r\n    &__clear {\r\n      font-size: .14rem;\r\n    }\r\n  }\r\n  &__item {\r\n    display: flex;\r\n    padding: .12rem 0;\r\n    border-bottom: .01rem solid $content-bgcolor;\r\n    color: $content-fontcolor;\r\n    &__icon {\r\n      line-height: .46rem;\r\n      margin-right: .14rem;\r\n      font-size: .2rem;\r\n      color: $btn-bgColor;\r\n    }\r\n    img {\r\n      margin-right: .16rem;\r\n      height: .46rem;\r\n      width: .46rem;\r\n    }\r\n    &__text {\r\n      position: relative;\r\n      flex: 1;\r\n      overflow: hidden;\r\n      h4 {\r\n        margin: 0 0 .06rem 0;\r\n        font-size: .14rem;\r\n        line-height: .2rem;\r\n        color: $content-fontcolor;\r\n        @include ellipsis\r\n      }\r\n      .price {\r\n        .yen {\r\n          margin-right: .02rem;\r\n          line-height: .2rem;\r\n          font-size: .12rem;\r\n          color: $highlight-fontColor;\r\n        }\r\n        .origin {\r\n          display: inline-block;\r\n          font-size: .12rem;\r\n          transform: scale(.83);\r\n          transform-origin: center;\r\n          text-decoration: line-through;\r\n          color: $light-fontColor;\r\n        }\r\n      }\r\n      .number {\r\n        position: absolute;\r\n        display: flex;\r\n        line-height: .2rem;\r\n        right: 0;\r\n        bottom: 0;\r\n        margin: 0.12rem 0;\r\n        &__num {\r\n          margin: 0 .1rem;\r\n          font-size: .14rem;\r\n        }\r\n        &__minus,&__plus {\r\n          line-height: .16rem;\r\n          box-sizing: border-box;\r\n          height: .2rem;\r\n          width: .2rem;\r\n          font-size: .18rem;\r\n          text-align: center;\r\n          border-radius: 50%;\r\n        }\r\n        &__minus {\r\n          border: .01rem solid $mid-fontColor;\r\n          color: $mid-fontColor;\r\n        }\r\n        &__plus {\r\n          background: $btn-bgColor;\r\n          color: $bgColor;\r\n        }\r\n      }\r\n    }\r\n  }\r\n}\r\n\r\n.icon {\r\n  position: relative;\r\n  width: .84rem;\r\n  img {\r\n    display: block;\r\n    height: .26rem;\r\n    width: .28rem;\r\n    margin: .12rem auto;\r\n  }\r\n  &__tag {\r\n    position: absolute;\r\n    top: .03rem;\r\n    left: .46rem;\r\n    height: .2rem;\r\n    padding: 0 .04rem;\r\n    min-width: .2rem;\r\n    line-height: .2rem;\r\n    text-align: center;\r\n    transform: scale(50%);\r\n    transform-origin: left center;\r\n    border-radius: .1rem;\r\n    background-color: $highlight-fontColor;\r\n    color: $bgColor;\r\n  }\r\n}\r\n\r\n.check {\r\n  flex: 1;\r\n  font-size: .12rem;\r\n  margin: .14rem 0;\r\n  color: $content-fontcolor;\r\n  span {\r\n    display: inline-block;\r\n    font-size: .18rem;\r\n    color: $highlight-fontColor;\r\n  }\r\n}\r\n\r\n.car {\r\n  line-height: .49rem;\r\n  width: .98rem;\r\n  background: #4FB0F9;\r\n  color: $bgColor;\r\n  text-align: center;\r\n}\r\n</style>\r\n\r\n"]},"metadata":{},"sourceType":"module"}