{"ast":null,"code":"import { reactive, ref, toRefs } from '@vue/reactivity';\nimport { get } from '@/utils/request';\nimport { useRoute } from 'vue-router';\nimport { watchEffect } from '@vue/runtime-core';\nimport { commonCartEffect } from './commonCartEffect';\nimport store from '@/store';\nconst categoryList = [{\n  name: '全部商品',\n  tab: 'all'\n}, {\n  name: '秒杀',\n  tab: 'seckill'\n}, {\n  name: '新鲜水果',\n  tab: 'fruit'\n}]; // 与tab切换有关的逻辑\n\nconst useTabEffect = () => {\n  const currentTab = ref(categoryList[0].tab);\n\n  const handleTabClick = tab => {\n    currentTab.value = tab;\n  };\n\n  return {\n    currentTab,\n    handleTabClick\n  };\n}; // 列表内容\n\n\nconst useProductEffect = (currentTab, shopId) => {\n  const data = reactive({\n    productList: []\n  });\n\n  const getProductData = async () => {\n    const result = await get(`/api/shop/${shopId}/products`, {\n      tab: currentTab.value\n    });\n\n    if (result?.errno === 0 && result?.data?.length) {\n      data.productList = result.data;\n    }\n  };\n\n  watchEffect(() => {\n    // 每切换一次tab，需要重新获取一次productData，\n    // 使用监听函数更加美观\n    getProductData();\n  });\n  const {\n    productList\n  } = toRefs(data);\n  return {\n    productList\n  };\n}; // 购物车\n\n\nconst useCartEffect = () => {\n  const {\n    cartList,\n    changeCartItem\n  } = commonCartEffect();\n\n  const changeShopName = (shopId, shopName) => {\n    store.commit('changeShopName', {\n      shopId,\n      shopName\n    });\n  };\n\n  const changeCart = (shopId, productId, item, num, shopName) => {\n    changeCartItem(shopId, productId, item, num);\n    changeShopName(shopId, shopName);\n  };\n\n  const getProductCartCount = (shopId, productId) => {\n    return cartList?.[shopId]?.productList?.[productId]?.count || 0;\n  };\n\n  return {\n    changeCart,\n    cartList,\n    getProductCartCount\n  };\n};\n\nexport default {\n  name: 'ContentView',\n  props: ['shopName'],\n\n  setup() {\n    const route = useRoute();\n    const shopId = route.params.id;\n    const {\n      currentTab,\n      handleTabClick\n    } = useTabEffect();\n    const {\n      productList\n    } = useProductEffect(currentTab, shopId);\n    const {\n      changeCart,\n      cartList,\n      getProductCartCount\n    } = useCartEffect();\n    return {\n      productList,\n      categoryList,\n      getProductCartCount,\n      currentTab,\n      handleTabClick,\n      cartList,\n      shopId,\n      changeCart\n    };\n  }\n\n};","map":{"version":3,"mappings":"AA+CA,SAASA,QAAT,EAAmBC,GAAnB,EAAwBC,MAAxB,QAAsC,iBAAtC;AACA,SAASC,GAAT,QAAoB,iBAApB;AACA,SAASC,QAAT,QAAyB,YAAzB;AACA,SAASC,WAAT,QAA4B,mBAA5B;AACA,SAASC,gBAAT,QAAiC,oBAAjC;AACA,OAAOC,KAAP,MAAkB,SAAlB;AAEA,MAAMC,YAAW,GAAI,CACnB;EACEC,IAAI,EAAE,MADR;EAEEC,GAAG,EAAE;AAFP,CADmB,EAKnB;EACED,IAAI,EAAE,IADR;EAEEC,GAAG,EAAE;AAFP,CALmB,EASnB;EACED,IAAI,EAAE,MADR;EAEEC,GAAG,EAAE;AAFP,CATmB,CAArB,C,CAeA;;AACA,MAAMC,YAAW,GAAI,MAAI;EACvB,MAAMC,UAAS,GAAIX,GAAG,CAACO,YAAY,CAAC,CAAD,CAAZ,CAAgBE,GAAjB,CAAtB;;EACA,MAAMG,cAAa,GAAKH,GAAD,IAAO;IAC5BE,UAAU,CAACE,KAAX,GAAmBJ,GAAnB;EACF,CAFA;;EAGA,OAAO;IACLE,UADK;IACMC;EADN,CAAP;AAGF,CARA,C,CAUA;;;AACA,MAAME,gBAAe,GAAI,CAACH,UAAD,EAAaI,MAAb,KAAsB;EAC7C,MAAMC,IAAG,GAAIjB,QAAQ,CAAC;IAACkB,WAAW,EAAE;EAAd,CAAD,CAArB;;EACA,MAAMC,cAAa,GAAI,YAAS;IAC9B,MAAMC,MAAK,GAAI,MAAMjB,GAAG,CAAE,aAAYa,MAAO,WAArB,EAAgC;MACtDN,GAAG,EAAEE,UAAU,CAACE;IADsC,CAAhC,CAAxB;;IAGA,IAAGM,MAAM,EAAEC,KAAR,KAAkB,CAAlB,IAAuBD,MAAM,EAAEH,IAAR,EAAcK,MAAxC,EAAgD;MAC9CL,IAAI,CAACC,WAAL,GAAmBE,MAAM,CAACH,IAA1B;IACF;EACF,CAPA;;EAQAZ,WAAW,CAAC,MAAI;IACd;IACA;IACAc,cAAc;EACf,CAJU,CAAX;EAMA,MAAM;IAAED;EAAF,IAAkBhB,MAAM,CAACe,IAAD,CAA9B;EACA,OAAO;IACLC;EADK,CAAP;AAGF,CApBA,C,CAsBA;;;AACA,MAAMK,aAAY,GAAI,MAAI;EACxB,MAAM;IAAEC,QAAF;IAAYC;EAAZ,IAA+BnB,gBAAgB,EAArD;;EACA,MAAMoB,cAAa,GAAI,CAACV,MAAD,EAAQW,QAAR,KAAmB;IACxCpB,KAAK,CAACqB,MAAN,CAAa,gBAAb,EAA8B;MAC5BZ,MAD4B;MACrBW;IADqB,CAA9B;EAGF,CAJA;;EAKA,MAAME,UAAS,GAAI,CAACb,MAAD,EAASc,SAAT,EAAoBC,IAApB,EAA0BC,GAA1B,EAA+BL,QAA/B,KAA0C;IAC3DF,cAAc,CAACT,MAAD,EAASc,SAAT,EAAoBC,IAApB,EAA0BC,GAA1B,CAAd;IACAN,cAAc,CAACV,MAAD,EAAQW,QAAR,CAAd;EACF,CAHA;;EAIA,MAAMM,mBAAkB,GAAI,CAACjB,MAAD,EAASc,SAAT,KAAqB;IAC/C,OAAON,QAAQ,GAAGR,MAAH,CAAR,EAAoBE,WAApB,GAAkCY,SAAlC,GAA8CI,KAA9C,IAAuD,CAA9D;EACF,CAFA;;EAGA,OAAO;IACLL,UADK;IACOL,QADP;IACiBS;EADjB,CAAP;AAGF,CAjBA;;AAmBA,eAAe;EACbxB,IAAI,EAAE,aADO;EAEb0B,KAAK,EAAE,CAAC,UAAD,CAFM;;EAGbC,KAAK,GAAG;IACN,MAAMC,KAAI,GAAIjC,QAAQ,EAAtB;IACA,MAAMY,MAAK,GAAIqB,KAAK,CAACC,MAAN,CAAaC,EAA5B;IACA,MAAM;MAAE3B,UAAF;MAAcC;IAAd,IAAiCF,YAAY,EAAnD;IACA,MAAM;MAAEO;IAAF,IAAkBH,gBAAgB,CAACH,UAAD,EAAaI,MAAb,CAAxC;IACA,MAAM;MAAEa,UAAF;MAAcL,QAAd;MAAwBS;IAAxB,IAAgDV,aAAa,EAAnE;IAEA,OAAO;MACLL,WADK;MAELV,YAFK;MAESyB,mBAFT;MAGLrB,UAHK;MAGOC,cAHP;MAILW,QAJK;MAIKR,MAJL;MAIaa;IAJb,CAAP;EAMF;;AAhBa,CAAf","names":["reactive","ref","toRefs","get","useRoute","watchEffect","commonCartEffect","store","categoryList","name","tab","useTabEffect","currentTab","handleTabClick","value","useProductEffect","shopId","data","productList","getProductData","result","errno","length","useCartEffect","cartList","changeCartItem","changeShopName","shopName","commit","changeCart","productId","item","num","getProductCartCount","count","props","setup","route","params","id"],"sourceRoot":"","sources":["C:\\Carrie\\VVVVVue\\jingdong\\src\\views\\shop\\Content.vue"],"sourcesContent":["<template>\r\n  <div class=\"content\">\r\n    <div class=\"category\">\r\n      <div\r\n      v-for=\"(item,index) in categoryList\"\r\n      :key=\"index\"\r\n      :class=\"{'category__item': true, 'category__item--active': currentTab === item.tab}\"\r\n      @click=\"()=>handleTabClick(item.tab)\"\r\n      >\r\n      {{item.name}}\r\n      </div>\r\n    </div>\r\n    <div class=\"product\">\r\n      <div\r\n      v-for=\"item in productList\"\r\n      :key=\"item._id\"\r\n      class=\"product__item\"\r\n      >\r\n        <img :src=\"item.imgUrl\" alt=\"\">\r\n        <div class=\"product__item__text\">\r\n          <h4>{{item.name}}</h4>\r\n          <p>月售{{item.sales}}件</p>\r\n          <div class=\"price\">\r\n            <span class=\"yen\">￥{{item.price}}</span>\r\n            <span class=\"origin\">￥{{item.oldPrice}}</span>\r\n          </div>\r\n          <div class=\"number\">\r\n            <div\r\n            class=\"number__minus\"\r\n            @click=\"()=>{changeCart(shopId, item._id, item, -1, shopName)}\"\r\n            >-</div>\r\n            <div class=\"number__num\">\r\n              <!-- {{ getProductCartCount(shopId, item._id) }} -->\r\n              {{ cartList?.[shopId]?.productList?.[item._id]?.count || 0 }}\r\n            </div>\r\n            <div\r\n            class=\"number__plus\"\r\n            @click=\"()=>{changeCart(shopId, item._id, item, 1, shopName)}\"\r\n            >+</div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { reactive, ref, toRefs } from '@vue/reactivity'\r\nimport { get } from '@/utils/request'\r\nimport { useRoute } from 'vue-router'\r\nimport { watchEffect } from '@vue/runtime-core'\r\nimport { commonCartEffect } from './commonCartEffect'\r\nimport store from '@/store'\r\n\r\nconst categoryList = [\r\n  {\r\n    name: '全部商品',\r\n    tab: 'all'\r\n  },\r\n  {\r\n    name: '秒杀',\r\n    tab: 'seckill'\r\n  },\r\n  {\r\n    name: '新鲜水果',\r\n    tab: 'fruit'\r\n  }\r\n]\r\n\r\n// 与tab切换有关的逻辑\r\nconst useTabEffect = ()=>{\r\n  const currentTab = ref(categoryList[0].tab)\r\n  const handleTabClick = (tab)=>{\r\n    currentTab.value = tab\r\n  }\r\n  return {\r\n    currentTab,handleTabClick\r\n  }\r\n}\r\n\r\n// 列表内容\r\nconst useProductEffect = (currentTab, shopId)=>{\r\n  const data = reactive({productList: []})\r\n  const getProductData = async()=>{\r\n    const result = await get(`/api/shop/${shopId}/products`,{\r\n      tab: currentTab.value\r\n    })\r\n    if(result?.errno === 0 && result?.data?.length) {\r\n      data.productList = result.data\r\n    }\r\n  }\r\n  watchEffect(()=>{\r\n    // 每切换一次tab，需要重新获取一次productData，\r\n    // 使用监听函数更加美观\r\n    getProductData()\r\n  })\r\n\r\n  const { productList } = toRefs(data)\r\n  return {\r\n    productList\r\n  }\r\n}\r\n\r\n// 购物车\r\nconst useCartEffect = ()=>{\r\n  const { cartList, changeCartItem } = commonCartEffect()\r\n  const changeShopName = (shopId,shopName)=>{\r\n    store.commit('changeShopName',{\r\n      shopId,shopName\r\n    })\r\n  }\r\n  const changeCart = (shopId, productId, item, num, shopName)=>{\r\n    changeCartItem(shopId, productId, item, num)\r\n    changeShopName(shopId,shopName)\r\n  }\r\n  const getProductCartCount = (shopId, productId)=>{\r\n    return cartList?.[shopId]?.productList?.[productId]?.count || 0\r\n  }\r\n  return {\r\n    changeCart, cartList, getProductCartCount\r\n  }\r\n}\r\n\r\nexport default {\r\n  name: 'ContentView',\r\n  props: ['shopName'],\r\n  setup() {\r\n    const route = useRoute()\r\n    const shopId = route.params.id\r\n    const { currentTab, handleTabClick } = useTabEffect()\r\n    const { productList } = useProductEffect(currentTab, shopId)\r\n    const { changeCart, cartList, getProductCartCount } = useCartEffect()\r\n\r\n    return {\r\n      productList,\r\n      categoryList, getProductCartCount,\r\n      currentTab, handleTabClick,\r\n      cartList, shopId, changeCart\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n@import '../../style/viriables.scss';\r\n@import '../../style/mixins.scss';\r\n\r\n.content {\r\n  display: flex;\r\n  position: absolute;\r\n  left: 0;\r\n  right: 0;\r\n  top: 1.68rem;\r\n  bottom: .49rem;\r\n}\r\n\r\n.category {\r\n  height: 100%;\r\n  width: .76rem;\r\n  overflow-y: scroll;\r\n  background: $search-bgColor;\r\n  border-radius: 2px;\r\n  &__item {\r\n    line-height: .4rem;\r\n    text-align: center;\r\n    font-size: .14rem;\r\n    color: $content-fontcolor;\r\n    &--active {\r\n      background: $bgColor;\r\n    }\r\n  }\r\n}\r\n\r\n.product {\r\n  flex: 1;\r\n  margin: 0 .18rem 0 .16rem;\r\n  overflow-y: scroll;\r\n  &__item {\r\n    display: flex;\r\n    padding: .12rem 0;\r\n    border-bottom: .01rem solid $content-bgcolor;\r\n    color: $content-fontcolor;\r\n    img {\r\n      margin-right: .16rem;\r\n      height: .68rem;\r\n      width: .68rem;\r\n    }\r\n    &__text {\r\n      position: relative;\r\n      flex: 1;\r\n      overflow: hidden;\r\n      h4 {\r\n        margin: 0;\r\n        font-size: .14rem;\r\n        line-height: .2rem;\r\n        color: $content-fontcolor;\r\n        @include ellipsis\r\n      }\r\n      p {\r\n        margin: .06rem 0;\r\n        line-height: .16rem;\r\n        font-size: .12rem;\r\n        color: $content-fontcolor;\r\n      }\r\n      .price {\r\n        .yen {\r\n          margin-right: .02rem;\r\n          line-height: .2rem;\r\n          font-size: .12rem;\r\n          color: $highlight-fontColor;\r\n        }\r\n        .origin {\r\n          display: inline-block;\r\n          font-size: .12rem;\r\n          transform: scale(.83);\r\n          transform-origin: center;\r\n          text-decoration: line-through;\r\n          color: $light-fontColor;\r\n        }\r\n      }\r\n      .number {\r\n        position: absolute;\r\n        display: flex;\r\n        line-height: .2rem;\r\n        right: 0;\r\n        bottom: 0;\r\n        &__num {\r\n          margin: 0 .1rem;\r\n          font-size: .14rem;\r\n        }\r\n        &__minus,&__plus {\r\n          line-height: .16rem;\r\n          box-sizing: border-box;\r\n          height: .2rem;\r\n          width: .2rem;\r\n          font-size: .18rem;\r\n          text-align: center;\r\n          border-radius: 50%;\r\n        }\r\n        &__minus {\r\n          border: .01rem solid $mid-fontColor;\r\n          color: $mid-fontColor;\r\n        }\r\n        &__plus {\r\n          background: $btn-bgColor;\r\n          color: $bgColor;\r\n        }\r\n      }\r\n    }\r\n  }\r\n}\r\n\r\n\r\n</style>\r\n"]},"metadata":{},"sourceType":"module"}