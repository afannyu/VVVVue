{"ast":null,"code":"import { reactive, ref, toRefs } from '@vue/reactivity';\nimport { get } from '@/utils/request';\nimport { useRoute } from 'vue-router';\nimport { watchEffect } from '@vue/runtime-core';\nimport { commonCartEffect } from './commonCartEffect';\nimport store from '@/store';\nconst categoryList = [{\n  name: '全部商品',\n  tab: 'all'\n}, {\n  name: '秒杀',\n  tab: 'seckill'\n}, {\n  name: '新鲜水果',\n  tab: 'fruit'\n}]; // 与tab切换有关的逻辑\n\nconst useTabEffect = () => {\n  const currentTab = ref(categoryList[0].tab);\n\n  const handleTabClick = tab => {\n    currentTab.value = tab;\n  };\n\n  return {\n    currentTab,\n    handleTabClick\n  };\n}; // 列表内容\n\n\nconst useProductEffect = (currentTab, shopId) => {\n  const data = reactive({\n    productList: []\n  });\n\n  const getProductData = async () => {\n    const result = await get(`/api/shop/${shopId}/products`, {\n      tab: currentTab.value\n    });\n\n    if (result?.errno === 0 && result?.data?.length) {\n      data.productList = result.data;\n    }\n  };\n\n  watchEffect(() => {\n    // 每切换一次tab，需要重新获取一次productData，\n    // 使用监听函数更加美观\n    getProductData();\n  });\n  const {\n    productList\n  } = toRefs(data);\n  return {\n    productList\n  };\n};\n\nexport default {\n  name: 'ContentView',\n  props: ['shopName'],\n\n  setup() {\n    const route = useRoute();\n    const shopId = route.params.id;\n    const {\n      currentTab,\n      handleTabClick\n    } = useTabEffect();\n    const {\n      productList\n    } = useProductEffect(currentTab, shopId);\n    const {\n      cartList,\n      changeCartItem\n    } = commonCartEffect();\n\n    const changeShopName = (shopId, shopName) => {\n      store.commit('changeShopName', {\n        shopId,\n        shopName\n      });\n    };\n\n    const changeCart = (shopId, productId, item, num, shopName) => {\n      changeCartItem(shopId, productId, item, num);\n      changeShopName(shopId, shopName);\n    };\n\n    return {\n      productList,\n      categoryList,\n      currentTab,\n      handleTabClick,\n      cartList,\n      shopId,\n      changeCart\n    };\n  }\n\n};","map":{"version":3,"mappings":"AA8CA,SAASA,QAAT,EAAmBC,GAAnB,EAAwBC,MAAxB,QAAsC,iBAAtC;AACA,SAASC,GAAT,QAAoB,iBAApB;AACA,SAASC,QAAT,QAAyB,YAAzB;AACA,SAASC,WAAT,QAA4B,mBAA5B;AACA,SAASC,gBAAT,QAAiC,oBAAjC;AACA,OAAOC,KAAP,MAAkB,SAAlB;AAEA,MAAMC,YAAW,GAAI,CACnB;EACEC,IAAI,EAAE,MADR;EAEEC,GAAG,EAAE;AAFP,CADmB,EAKnB;EACED,IAAI,EAAE,IADR;EAEEC,GAAG,EAAE;AAFP,CALmB,EASnB;EACED,IAAI,EAAE,MADR;EAEEC,GAAG,EAAE;AAFP,CATmB,CAArB,C,CAeA;;AACA,MAAMC,YAAW,GAAI,MAAI;EACvB,MAAMC,UAAS,GAAIX,GAAG,CAACO,YAAY,CAAC,CAAD,CAAZ,CAAgBE,GAAjB,CAAtB;;EACA,MAAMG,cAAa,GAAKH,GAAD,IAAO;IAC5BE,UAAU,CAACE,KAAX,GAAmBJ,GAAnB;EACF,CAFA;;EAGA,OAAO;IACLE,UADK;IACMC;EADN,CAAP;AAGF,CARA,C,CAUA;;;AACA,MAAME,gBAAe,GAAI,CAACH,UAAD,EAAaI,MAAb,KAAsB;EAC7C,MAAMC,IAAG,GAAIjB,QAAQ,CAAC;IAACkB,WAAW,EAAE;EAAd,CAAD,CAArB;;EACA,MAAMC,cAAa,GAAI,YAAS;IAC9B,MAAMC,MAAK,GAAI,MAAMjB,GAAG,CAAE,aAAYa,MAAO,WAArB,EAAgC;MACtDN,GAAG,EAAEE,UAAU,CAACE;IADsC,CAAhC,CAAxB;;IAGA,IAAGM,MAAM,EAAEC,KAAR,KAAkB,CAAlB,IAAuBD,MAAM,EAAEH,IAAR,EAAcK,MAAxC,EAAgD;MAC9CL,IAAI,CAACC,WAAL,GAAmBE,MAAM,CAACH,IAA1B;IACF;EACF,CAPA;;EAQAZ,WAAW,CAAC,MAAI;IACd;IACA;IACAc,cAAc;EACf,CAJU,CAAX;EAMA,MAAM;IAAED;EAAF,IAAkBhB,MAAM,CAACe,IAAD,CAA9B;EACA,OAAO;IACLC;EADK,CAAP;AAGF,CApBA;;AAsBA,eAAe;EACbT,IAAI,EAAE,aADO;EAEbc,KAAK,EAAE,CAAC,UAAD,CAFM;;EAGbC,KAAK,GAAG;IACN,MAAMC,KAAI,GAAIrB,QAAQ,EAAtB;IACA,MAAMY,MAAK,GAAIS,KAAK,CAACC,MAAN,CAAaC,EAA5B;IACA,MAAM;MAAEf,UAAF;MAAcC;IAAd,IAAiCF,YAAY,EAAnD;IACA,MAAM;MAAEO;IAAF,IAAkBH,gBAAgB,CAACH,UAAD,EAAaI,MAAb,CAAxC;IACA,MAAM;MAAEY,QAAF;MAAYC;IAAZ,IAA+BvB,gBAAgB,EAArD;;IACA,MAAMwB,cAAa,GAAI,CAACd,MAAD,EAAQe,QAAR,KAAmB;MACxCxB,KAAK,CAACyB,MAAN,CAAa,gBAAb,EAA8B;QAC5BhB,MAD4B;QACrBe;MADqB,CAA9B;IAGF,CAJA;;IAKA,MAAME,UAAS,GAAI,CAACjB,MAAD,EAASkB,SAAT,EAAoBC,IAApB,EAA0BC,GAA1B,EAA+BL,QAA/B,KAA0C;MAC3DF,cAAc,CAACb,MAAD,EAASkB,SAAT,EAAoBC,IAApB,EAA0BC,GAA1B,CAAd;MACAN,cAAc,CAACd,MAAD,EAAQe,QAAR,CAAd;IACF,CAHA;;IAIA,OAA